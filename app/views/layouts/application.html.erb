<!DOCTYPE html>
<html>
  <head>
    <title>MarioMart</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


  </head>

  <body>
    <nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">Mario's Mega-Mart</a>
    </div>
    <ul class="nav navbar-nav">
      <li class="active">
      <li><a href="/products">Products</a></li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
      <% if user_signed_in?  %>
      <li><a href="#"><span class=></span> Signed in as <%= current_user.username %></a></li>
      <li><a href="/users/sign_out" data-method= "delete" ><span class="glyphicon glyphicon-user"></span> Sign Out</a></li>
      <% end %>
      <% if !user_signed_in? %>
      <li><a href="#"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
      <% end %>
      <li><a href="/users/sign_in"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
    </ul>
  </div>
</nav> 
    <div class="container">
    <%= flash[:alert] %>
    <%= flash[:notice] %>
    <%= yield %>
    </div>
  </body>
</html>
