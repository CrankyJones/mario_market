<%= render "layouts/errors", :object => @review %>


<%if @review.id %>
  <p><%= link_to "Delete Review", product_review_path(@product, @review),
                        :data => {:confirm => "Are you sure?",
                                       :method => "delete"} %></p>
  <% end %>

<%= form_for [@product, @review] do |f| %>
  <%= f.hidden_field :author, :value => current_user.username %>
  <%= f.label :title, 'Enter a title for your review:' %>
  <%= f.text_field :title, class: 'form-control', required: true %><br>
  <%= f.label :content_body, 'Enter your review (Must be between 50 & 250 characters):' %>
  <%= f.text_area :content_body, class: 'form-control', required: true %><br>
  <%= f.label :rating, 'Enter a rating for the product (1 to 5, 5 being the highest):'%>
  <%= f.number_field :rating, class: 'form-control', required: true %><br>
  <%= f.submit class: 'btn btn-light' %><br>
<% end %><br>

<%= button_to 'Back to the product.', product_path(@product), :method => "get", class: 'btn btn-light' %><br>