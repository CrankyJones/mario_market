<%= render "layouts/errors", :object => @product %>

<%if @product.id %>
  <p><%= link_to "Delete Product", product_path(@product),
                        :data => {:confirm => "Are you sure?",
                                       :method => "delete"} %></p>
  <% end %>

<%= form_for @product do |f| %>
  <%= f.label :name, 'Product Name:' %>
  <%= f.text_field :name, required: true %><br>
  <%= f.label :cost, 'Product Price:'%>
  <%= f.number_field :cost, step: :any, required: true %><br>
  <%= f.label :country_of_origin, 'Product Origin:' %>
  <%= f.text_field :country_of_origin, required: true %><br>
  <%= f.submit %>
<% end %>