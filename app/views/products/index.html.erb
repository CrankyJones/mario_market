
<h2>Here is a current list of products available at Mario's.</h2>
<h3>Click on one for more details.</h3>

<% if @products.any? %>
<% products = @products.sort_by { |k| k[:name] } %>
    <div class="card-columns">
    <% products.each do |product| %>
      <div class="card">
      <div class="card-block">
        <div class="card-title"><%= link_to product.name, product_path(product) %></div>
      </div>
    </div>
    <% end %>
  </div>
<% else %>
  <p>There are no products yet.</p>
<% end %>


<% if current_user&.admin %>
<%= button_to "Add a new product", new_product_path, :method => "get", class: "btn btn-primary" %><br>
<% end %>