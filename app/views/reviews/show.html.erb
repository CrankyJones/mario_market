<div class="review_text">
<h1> <%= @review.title %></h1>
<h4> By: <%= @review.author %></h4>
<h6> Rating: <%=@review.rating %> star(s)</h6>
<p><%= @review.content_body %></p></div>

<% if current_user&.admin %>
<%= button_to 'Edit or Delete Review', edit_product_review_path(@product, @review),  :method => "get", class: 'btn btn-light'  %><br>
<% end %>
<%= button_to 'Back to the product', product_path(@product), :method => "get", class: 'btn btn-light' %><br>